<section id="devise">
  <%= devise_error_messages! %>
  <div class='row'>
    <div class='col-12 devise-frame'>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <fieldset>
            <legend>Sign up</legend>
            <div class='form-group'>
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, placeholder: 'Enter email', class: 'form-control' %>
            </div>
            <div class='form-group'>
              <%= f.label :password %>
              <%= f.password_field :password, placeholder: 'Enter password', class: 'form-control' %>
            </div>
            <div class='form-group'>
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, placeholder: 'Repeat password', class: 'form-control' %>
            </div>
            <div class='form-group'>
              <%= f.submit 'Sign up', class: 'btn btn-primary btn-large btn-block' %>
            </div>
      <% end %>
      <p><small>By registering, you understand that we will store and make use the information provided in accordance with our <%= link_to 'Privacy statement', page_path('privacy') %></small></p>
      <%= render 'devise/shared/links' %>
      </fieldset>
    </div>
  </div>

</section>